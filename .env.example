# Configurações do Servidor
PORT=3000
NODE_ENV=development

# JWT Secret (ALTERE PARA PRODUÇÃO!)
# Para gerar um secret seguro: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Bcrypt - Número de rounds (10-12 recomendado)
BCRYPT_ROUNDS=12

# Database
DATABASE_PATH=./backend/database/undertech.db

# CORS - Permitir apenas origens específicas em produção
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
